<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:background="@drawable/rounded_white"
    android:padding="12dp">

    <!-- Заголовок блока -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Информация о билете"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/orange"
        android:paddingBottom="8dp"/>

    <!-- Маршрут -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Номер рейса"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cartRouteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Маршрут"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingBottom="8dp"/>

    <!-- Место -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Место"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cartSeatText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Место"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingBottom="8dp"/>

    <!-- Цена -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Цена"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cartPriceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Цена"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingBottom="8dp"/>

    <!-- Класс -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Класс"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cartClassText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Класс"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingBottom="8dp"/>

    <!-- Кнопка "Удалить из корзины" -->
    <Button
        android:id="@+id/removeFromCartButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:text="Удалить из корзины"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F37B09"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        />
    <Button
        android:id="@+id/pay_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:text="Оплатить"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F37B09"
        android:textAllCaps="false"
        app:cornerRadius="8dp"/>
</LinearLayout>
